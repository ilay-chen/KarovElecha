<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mikve_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context="com.flower.karovelecha.mikvePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#58bafd"
        android:layoutDirection="rtl"
        android:id="@+id/panel">

        <TextView
            android:layout_weight="10"
            android:text="מקווה"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="25dp"
            android:id="@+id/synagogaName" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="#00FFFFFF"
            android:paddingRight="50dp"
            app:srcCompat="@android:drawable/ic_menu_revert" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#8058bafd"
        android:id="@+id/main_data"
        android:layout_below="@+id/panel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="פרטי מקווה"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/diraction" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/wazeimage"
                android:id="@+id/diraction"
                android:focusable="false"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/sep1"
        android:layout_below="@id/main_data"
        android:background="#c1e4fe"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e4f4ff"
        android:padding="10dp"
        android:layout_below="@id/sep1"
        android:id="@+id/contacts">
        <TextView
            android:text="צור קשר"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/data"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_below="@+id/main_data"
            android:layout_alignParentRight="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/sep2"
        android:layout_below="@id/contacts"
        android:background="#c1e4fe"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dcf1ff"
        android:padding="10dp"
        android:id="@+id/hours"
        android:layout_below="@id/sep2">
        <TextView
            android:text="שעות פתיחה"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/extra_data"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_below="@+id/main_data"
            android:layout_alignParentRight="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/sep3"
        android:layout_below="@id/hours"
        android:background="#c1e4fe"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e4f4ff"
        android:padding="10dp"
        android:layout_below="@id/sep3">
        <TextView
            android:text="מחיר כניסה"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cost"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_below="@+id/main_data"
            android:layout_alignParentRight="true" />
    </LinearLayout>

</RelativeLayout>
