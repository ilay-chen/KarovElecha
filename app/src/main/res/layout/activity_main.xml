<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flower.karovelecha.MainActivity"
    android:layoutDirection="rtl"
    tools:ignore="MissingPrefix" >

    <Button
        android:text="חיפוש תפילה"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tfilasearch"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <Button
        android:text="חיפוש שיעור"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shiursearch"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:text="חיפוש לפי יישוב"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tfilasearch"
        android:layout_alignParentRight="true"
        android:id="@+id/ishuvsearch" />

    <Button
        android:text="חיפוש מקווה"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ishuvsearch"
        android:layout_alignParentLeft="true"
        android:id="@+id/mikvesearch" />

    <Button
        android:text="צור קשר"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ishuvsearch"
        android:layout_alignParentRight="true"
        android:id="@+id/contact" />

    <Button
        android:text="הודעות"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mikvesearch"
        android:layout_alignParentLeft="true"
        android:id="@+id/massage" />

    <Button
        android:text="להקדשה לעילוי נשמת יקירכם / לפרסום באפליקציה"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:layout_alignParentRight="true"
        android:id="@+id/publish" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gushimage"
        android:layout_below="@+id/massage"
        android:layout_alignParentLeft="true"
        android:id="@+id/moazaimage" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moazaimage"
        android:layout_centerHorizontal="true"
        android:id="@+id/publishimage" />


</RelativeLayout>
</ScrollView>