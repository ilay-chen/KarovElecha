<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flower.karovelecha">

    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".DataClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".info"
            android:label="@string/title_activity_info"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".OpeningActivity"
            android:maxRecents="2"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tfilaSearch"
            android:maxRecents="2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shiurSearch"
            android:maxRecents="2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ishuvSearch"
            android:maxRecents="2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mikveSearch"
            android:maxRecents="2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:maxRecents="2"
            android:screenOrientation="portrait" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".massage"
            android:maxRecents="2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".contact"
            android:maxRecents="2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".hakdasha"
            android:maxRecents="2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SynagogaPage"
            android:maxRecents="2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mikvePage"
            android:screenOrientation="portrait" />
        <activity android:name=".feedBack" />
    </application>

</manifest>